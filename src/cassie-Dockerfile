FROM cassandra:latest

LABEL maintainer="Valerie Parham-Thompson" 
LABEL contact="valerie@tortugatech.com" 
LABEL version="2020-06"

ENV LC_ALL C.UTF-8
ENV LANG C.UTF-8
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
  && apt-get install -y \
  build-essential \
  netcat \
  make \
  git \
  curl \
  wget \
  vim \
  net-tools \
  iputils-ping \
  dnsutils \
  zip \
  unzip \
  ansible \
  python-dev \
  python-openssl \
  libpq-dev libxml2-dev libxslt1-dev libldap2-dev libsasl2-dev libffi-dev libssl-dev libbz2-dev libreadline-dev libsqlite3-dev libncurses5-dev libncursesw5-dev liblzma-dev \
  zlib1g-dev \
  openssh-server \
  sudo \
  llvm \
  ant \
  xz-utils \
  default-jre \
  tk-dev \
  && apt-get clean  \
  && rm -rf /var/lib/apt/lists/*

RUN wget https://www.python.org/ftp/python/3.7.5/Python-3.7.5.tgz \
&& tar zxf Python-3.7.5.tgz \
&& cd Python-3.7.5/ \
&& ./configure --prefix=/usr/local \
&& make \
&& make install

VOLUME "/mnt/data"
CMD ["/bin/bash"]